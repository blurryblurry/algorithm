#include <iostream>
#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS
using namespace std;


int main()
{
	int n;
	cin >> n;


	for (int c = 0;c < n;c++)
	{
		if (c == 0 || c == n - 1)
		{
			for (int i = 0; i < n;i++)
			{
				printf("*");
			}
			printf("\n");
		}
		else
		{
			for (int a = 0;a <n-c;a++)
			{
				if (a == n-c-1)	printf("*\n");
				else printf(" ");
			}
		}
	}
	return 0;

}
