
#include <iostream>
#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS
using namespace std;


int main()
{
	int n;
	cin >> n;
	for (int i = 0; i < n;i++)
	{
		printf("*");
	}
	printf("\n");

	for (int i = 0; i < n - 1;i++)
	{
		for (int a = 0;;a++)
		{
			if (a < n / 2) printf(" ");
			else if (a == n / 2) printf("*\n");
			else break;
		}
		
	}
	return 0;

}
