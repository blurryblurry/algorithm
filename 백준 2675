#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <vector>
#include <algorithm>
#include <string>
#define _CRT_SECURE_NO_WARNINGS
using namespace std;


int main()
{
	int n;
	cin >> n;
	for (int i = 0; i<n ;i++)  
	{
		int d;
		string s;
		cin >> d;
		cin >> s;
		for (int c = 0;c < s.length();c++)
		{
			for (int k = 0; k < d;k++)
			{
				cout << s[c];
			}
			
		}
		cout << endl;
	}
	return 0;
	
	
	
}
