#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#define _CRT_SECURE_NO_WARNINGS
using namespace std;


int main()
{
	int n;
	cin >> n;

	for (int i = 0; i < n;i++)
	{
		for (int c = 0;c<i;c++)
		{
			printf(" ");
		}
		for (int a = 0;a < n - i;a++)
		{
			printf("%d",- a + (n - i));
		}
		printf("\n");
	}
	return 0;
}
